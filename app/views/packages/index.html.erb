<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th >Name</th>
      <th >Version</th>
      <th >Date/Publication</th>
      <th >Title</th>
      <th >Description</th>
      <th >Authors</th>
      <th >Maintainers</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each_with_index do |package, i| %>
      <tr class="<%= cycle('even', 'odd') -%>" >
        <td><%= package.name %></td>
        <td><%= package.version %></td>
        <td><%= package.publication_date %></td>
        <td><%= package.title %></td>
        <td><%= package.description.truncate(20) %></td>
        <td><%= package.authors.pluck(:name, :email).join(', ') %></td>
        <td><%= package.maintainers.pluck(:name, :email).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

